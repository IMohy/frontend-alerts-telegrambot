# ============================================
# Jahiz Error Tracker - Configuration
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# --- Telegram Bot ---
# 1. Open Telegram and message @BotFather
# 2. Send /newbot and follow the prompts
# 3. Copy the token here
TELEGRAM_BOT_TOKEN=your-bot-token-here

# --- Telegram Chat ID ---
# 1. Add your bot to a group, or message it directly
# 2. Visit https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
# 3. Find the "chat":{"id": ...} value and paste it here
# Use negative numbers for group chats (e.g. -1001234567890)
TELEGRAM_CHAT_ID=your-chat-id-here

# --- Webhook Security ---
# A secret token to authenticate incoming webhook requests.
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=your-webhook-secret-here

# --- Rate Limiting (optional) ---
RATE_LIMIT_MAX_ERRORS=30
RATE_LIMIT_WINDOW_SECONDS=60

# --- Message Formatting (optional) ---
MAX_STACKTRACE_LENGTH=2000
MAX_METADATA_LENGTH=1000

# --- App Settings (optional) ---
DEBUG=false
